<?xml version="1.0" encoding="utf-8"?>
<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="ClientSlave_Avalonia.MainWindow"
        Width="400" Height="300"
        Title="Help Request Client">

    <StackPanel Margin="20">
        <TextBlock Text="Nome Utente:"/>
        <TextBox x:Name="UserTextBox" Width="200"/>

        <TextBlock Margin="0 10 0 0" Text="Messaggio:"/>
        <TextBox x:Name="MessageTextBox" Width="200" Height="80" AcceptsReturn="True"/>

        <Button x:Name="SendButton" Margin="0 20 0 0" Width="120" Content="Invia richiesta"/>
    </StackPanel>

</Window>
