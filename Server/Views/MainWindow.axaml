<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:Server.ViewModels"
        xmlns:models="using:Server.Models"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="Server.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Icon="/Assets/avalonia-logo.ico"
        Title="Server">

    <Design.DataContext>
        <vm:MainWindowViewModel/>
    </Design.DataContext>

    <DockPanel Margin="10">
        <Button DockPanel.Dock="Bottom"
                Content="Rimuovi selezionata"
                Margin="0,10,0,0"
                Command="{Binding RemoveSelected}" />

        <ListBox ItemsSource="{Binding Requests}" 
                 SelectedItem="{Binding SelectedRequest}">
            <ListBox.ItemTemplate>
                <DataTemplate x:DataType="models:HelpRequest">
                    <Border BorderThickness="1" BorderBrush="Gray" Padding="6" Margin="4">
                        <StackPanel>
                            <TextBlock Text="{Binding ComputerName}" FontWeight="Bold"/>
                            <TextBlock Text="{Binding User}"/>
                            <TextBlock Text="{Binding Message}"/>
                            <TextBlock Text="{Binding Timestamp}" FontSize="12"/>
                        </StackPanel>
                    </Border>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

    </DockPanel>

</Window>